{
  "name": "media-server-backend",
  "version": "1.0.0",
  "description": "Backend API server for personal media streaming",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "echo 'No build step required for Node.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback",
    "db:migrate-to-postgresql": "node scripts/migrate-to-postgresql.js migrate",
    "db:rollback-postgresql": "node scripts/migrate-to-postgresql.js rollback",
    "db:test-connection": "node -e \"const database = require('./src/utils/database'); database.connect().then(() => { console.log('âœ… Database connection successful'); return database.close(); }).catch(console.error);\"",
    "db:setup-postgresql-test": "node setup-postgresql-test.js",
    "db:setup-local-postgresql": "node setup-local-postgresql.js",
    "ssl:status": "node src/utils/sslManager.js status",
    "ssl:generate": "node src/utils/sslManager.js generate",
    "ssl:renew": "node src/utils/sslManager.js renew",
    "ssl:backup": "node src/utils/sslManager.js backup",
    "setup:ssl": "npm run ssl:generate && npm run ssl:status"
  },
  "dependencies": {
    "acme-client": "^5.0.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-winston": "^4.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "greenlock": "^4.0.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "mime-types": "^2.1.35",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "validator": "^13.15.15",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
